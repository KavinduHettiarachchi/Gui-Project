<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login Window" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Username:" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="150,50,0,0" VerticalAlignment="Top" Width="150"/>

        <TextBlock Text="Password:" HorizontalAlignment="Left" Margin="50,100,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="150,100,0,0" VerticalAlignment="Top" Width="150"/>

        <Button Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0" Width="100" Click="Login_Click"/>
    </Grid>
</Window>
