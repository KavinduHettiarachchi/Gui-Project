<Window x:Class="GUI.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About - Rice Mania" Height="612" Width="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="#ff4500" Height="100" Orientation="Horizontal">
            <Image Source="https://cdn.pixabay.com/photo/2016/03/05/19/02/hamburger-1238246_1280.jpg"
                   Height="80" Width="80" Margin="10"/>
            <TextBlock Text="About Rice Mania" Foreground="White" FontSize="28" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="10"/>
        </StackPanel>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="20">
            <!-- Business Info -->
            <TextBlock Text="Welcome to Rice Mania!" FontSize="22" FontWeight="Bold" Foreground="Black"/>
            <TextBlock Text="Rice Mania is a food service providing delicious meals and reliable food delivery. 
                             Our desktop app helps customers browse menus, place orders, and manage deliveries efficiently."
                       FontSize="16" TextWrapping="Wrap" Margin="0,10,0,0"/>

            <!-- Image -->
            <Image Source="https://cdn.pixabay.com/photo/2017/01/22/19/20/restaurant-2004480_1280.jpg"
                   Height="200" Stretch="UniformToFill" Margin="0,20,0,20"/>

            <!-- Additional Info -->
            <TextBlock Text="Why Choose Rice Mania?" FontSize="20" FontWeight="Bold" Foreground="Black"/>
            <TextBlock Text="✔ Fast and Fresh Food Delivery
✔ Wide Variety of Dishes
✔ Easy-to-Use Ordering System
✔ Best Customer Service"
                       FontSize="16" TextWrapping="Wrap" Margin="0,10,0,0"/>

            <!-- Footer -->
            <TextBlock Text="© 2025 Rice Mania | All Rights Reserved" HorizontalAlignment="Center"
                       Foreground="Gray" FontSize="14" Margin="20,40,0,0"/>
        </StackPanel>
    </Grid>
</Window>

