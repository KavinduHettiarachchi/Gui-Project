<Window x:Class="GUI.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="RiceMania" Height="450" Width="800">
    <Grid>
        <!-- Title -->
        <TextBlock Text="Rice Mania" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" 
                   Margin="0,10,0,0"/>

        <!-- Main Layout Grid -->
        <Grid Margin="10,50,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <!-- Image Section -->
                <ColumnDefinition Width="1*" />
                <!-- Button Section -->
            </Grid.ColumnDefinitions>

            <!-- Left Side: Image -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="Resourses/istockphoto-2149017451-612x612.jpg" Width="687" Height="348" Stretch="Uniform"/>
            </StackPanel>

            <!-- Right Side: Buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="Menu" Width="150" Height="40" Margin="5" Click="menubt"/>
                <Button Content="Order List" Width="150" Height="40" Margin="5" Click="orderbt"/>
                <Button Content="About" Width="150" Height="40" Margin="5" Click="aboutbt"/>
                <Button Content="Settings" Width="150" Height="40" Margin="5" Click="settingsbt"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

